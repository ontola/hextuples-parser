{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es2019"
  },
  "exclude": [
    "**/__tests__/*"
  ]
}
